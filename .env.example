# Django Settings
SECRET_KEY=your-secret-key-here-generate-with-django
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Configuration (MySQL)
DB_NAME=careersadhana
DB_USER=careers_user
DB_PASS=strong_password_here
DB_HOST=127.0.0.1
DB_PORT=3306

# ATS API Configuration
# Leave empty to use Mock Adapter for development
ATS_API_URL=
ATS_API_KEY=

# Example with real API:
# ATS_API_URL=https://api.example.com/ats/analyze
# ATS_API_KEY=your_api_key_here

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Admin Email (receives contact form submissions)
ADMIN_EMAIL=admin@yourdomain.com

# Security Settings (Production)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# File Upload Settings
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes

# Optional: Sentry Error Tracking
# SENTRY_DSN=https://your-sentry-dsn

# Optional: Celery (for background tasks)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0
